<h1>Show Lists</h1>
<h2><%= @list.name %></h2>

<h3>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.comment %>
    </li>
    <li>
      <%=image_tag bookmark.movie.poster_url %>
    </li>
    <li>
      <%= bookmark.movie.title %>
    </li>
    <li>
      <%=bookmark.movie.overview %>
    </li>
  <% end %>
</h3>

<%= link_to "<-- Back", lists_path, class: 'btn btn-danger' %>
<%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-danger' %>
